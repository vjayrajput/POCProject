<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="4.0dip"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/cd_restaurant_image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/photo" />


        <ImageView
            android:id="@+id/img_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginEnd="@dimen/dp4"
            android:contentDescription="@string/cd_fav_icon"
            android:padding="@dimen/dp8"
            app:srcCompat="@drawable/ic_unfavorite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:padding="@dimen/dp8">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btn_status"
                android:text="Nara Bandra (East)" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btn_status"
                android:fontFamily="@font/avenir_ltstd_book"
                android:text="Thai"
                android:textColor="@color/scootsy_black"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/btn_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp8"
                android:background="@drawable/round_background"
                android:fontFamily="@font/avenir_ltstd_book"
                android:gravity="center"
                android:paddingStart="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:paddingEnd="@dimen/dp8"
                android:paddingBottom="@dimen/dp4"
                android:text="45 min"
                android:textColor="@color/scootsy_black"
                android:textSize="@dimen/sp10" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
