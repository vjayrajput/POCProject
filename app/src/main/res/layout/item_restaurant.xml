<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="restaurant"
            type="app.akeed.model.Restaurant" />
    </data>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="4.0dip"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/cd_restaurant_image"
                android:scaleType="centerCrop"
                app:imageUrl="@{restaurant.imageUrl}" />


            <ImageView
                android:id="@+id/img_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginEnd="@dimen/dp4"
                android:contentDescription="@string/cd_fav_icon"
                android:padding="@dimen/dp8"
                android:src="@{restaurant.isFavourite ==0 ? @drawable/ic_unfavorite : @drawable/ic_favorite}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:padding="@dimen/dp8">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btn_status"
                    app:address="@{restaurant.address}"
                    app:name="@{restaurant.name}"
                    tools:text="Nara Bandra (East)" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btn_status"
                    android:fontFamily="@font/avenir_ltstd_book"
                    android:textColor="@color/scootsy_black"
                    android:textSize="@dimen/sp10"
                    app:type="@{restaurant.foodTypes}"
                    tools:text="Thai" />

                <TextView
                    android:id="@+id/btn_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@drawable/round_background"
                    android:fontFamily="@font/avenir_ltstd_book"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp8"
                    android:paddingTop="@dimen/dp4"
                    android:paddingEnd="@dimen/dp8"
                    android:paddingBottom="@dimen/dp4"
                    android:textColor="@color/scootsy_black"
                    android:textSize="@dimen/sp10"
                    app:status="@{restaurant.openStatus}"
                    tools:text="Open" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</layout>